<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#44ef44"
                android:endColor="#2f992f"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#2f992f" />
            <corners
                android:radius="3dp" />
            
        </shape>
    </item>
     
</selector>